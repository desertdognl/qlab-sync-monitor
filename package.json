{
  "name": "qlab-sync-monitor",
  "version": "0.2.0",
  "private": true,
  "description": "Small webpage to compare QLab Companion variables across multiple connections",
  "main": "main.js",
  "scripts": {
    "start": "python3 -m http.server 5173",
    "desktop": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac dmg",
    "dist:win": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "nl.desertdog.qlabsyncmonitor",
    "productName": "QLab Sync Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "app.js",
      "main.js",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
